#include "holberton.h"
#include <stdlib.h>



#include "main.h"
/**
 *array_range - function
 *@min: first parameter
 *@max: second parameter
 *Return: new pointer allocated
 */
int *array_range(int min, int max)
{
	int *array, index, size;

	if (min > max)
		return (NULL);

	size = max - min + 1;

	array = malloc(sizeof(int) * size);

	if (array == NULL)
		return (NULL);

	for (index = 0; index < size; index++)
		array[index] = min++;

	return (array);
}
